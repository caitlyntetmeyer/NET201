var x = 10;

// Demo: If

if (x == 10)
{
    Console.WriteLine("x is 10");
}

// Demo: If..Else

if (x == 10)
{
    Console.WriteLine("x is 10");
}
else
{
    Console.WriteLine("x is not 10");
}

// Demo: If..Else If..Else

// Demo: If..Else If..Else

if (x == 10)
{
    Console.WriteLine("x is 10");
}
else if (x == 20)
{
    Console.WriteLine("x is 20");
}
else
{
    Console.WriteLine("x is neither 10 nor 20");
}

